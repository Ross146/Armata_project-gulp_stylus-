@import "nib";
@import "/import/_var.styl";

*::-webkit-input-placeholder
  color: #fff
  opacity: 1

*:-moz-placeholder
  color: #fff
  opacity: 1

*::-moz-placeholder
  color: #fff
  opacity: 1

*:-ms-input-placeholder
  color: #fff
  opacity: 1

body input:focus:required:invalid,
body textarea:focus:required:invalid
  color: #fff
body input:required:valid,
body textarea:required:valid
  color: #fff

//Custom Styles Here
.homesect
  padding-top: 70px
  background-color: #f9f9f9
  font-family: RalewayRegular, sans-serif
  position: relative
  .section-head
    margin-bottom: 60px
    a
      font-family: RalewayBold, sans-serif
      &:hover
        text-decoration: none
    h2
      text-align center
      &:after
        display block
        margin 25px auto
        content ''
        width 165px
        height 4px
        background-color: $main-color
    h3
      text-align center
      margin-top: 50px
  .section-bottom
    background-color: #2C3949
    padding 50px 0
    text-align center
  &:before
    content: ''
    top -6px
    height: 6px
    width: 100%
    background-image url("../img/bah_11.png")
    position absolute

.section-content
  position: relative
  &.section_1
    background-image: url(../img/s1_gray_bg.png);
    background-repeat no-repeat
    background-position top
  .s1-bottom-triangle
    height: 98px
    width 100%
    bottom: 415px
    background-image: url(../img/s1_triangle.svg)
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    position absolute
    .triangle-logo
      width: 116px
      margin-top 30px
      position absolute
      left 50%
      z-index 3
      transform: translateX(-50%);
    .scales
      width 160px
      position absolute
      top -130px
      left 50%
      transform: translateX(-50%);
.s1-bottom
  padding 15px 0 65px
  background-color: #394b5f
  margin-top: 50px
  .info-item
    margin 15px 0 0
    p
      color white
      border-color: #546476
    &.center
      margin-top: 45px
  
.info-item
  padding-left: 34px
  max-width: 264px;
  line-height: 20 * $px_em
  margin 40px 0
  &.center
    margin-top 0
  h4
    margin-top: 0
    margin-bottom: 10px
    a
      font-size: 24 * $px_em
      text-transform: none
  p
    font-size: 15 * $px_em
    border-bottom: #DEE1E5 1px solid
    padding-bottom: 20px
    
.s2-items
  padding-bottom: 40px
  .s2-item
    text-align: center
    color #111
    display block
    margin-bottom: 70px
    > span
      display: block
  .img-wrap
    display inline-block
    padding-bottom: 32px
    margin-bottom: 12px
    box-shadow: 0 40px 0px -39px $main-color;
    img
      max-width: 80px
      height: 65px
  .s2-item-text
    font-family: RalewayBold, sans-serif
    font-size: 13 * $px_em
    line-height: 20* $px_em
.s2-items-wrap
  text-align: center
.s2-item-wrap
  display: inline-block
  vertical-align: top
  width: 185px
  padding 0 15px
  
.section_2
  .section-bottom
    background-color: #e5e5e5
//ALWAYS END
@import "/import/_media.styl";

