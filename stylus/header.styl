@import "nib";
@import "/import/_var.styl";

body
  font-size: 15px
  min-width: 320px
  position: relative
  line-height: 22 * $px_em
  font-family: "RobotoBold", sans-serif
  overflow-x: hidden
  color: #333
  

.hidden
  display: none
  
a, a:hover, a:focus, a:active
  color: $main-color
  text-decoration: underline

.headers
  font-family "PFCentroSlabProMedium", sans-serif
  text-transform: uppercase
  font-weight: normal
  color $headers-color

h1,h2,h3,h4,h5,h6
  @extend .headers
  line-height 22* $px_em;
  
h1
  font-size: 48 * $px_em;
h2
  font-size: 30 * $px_em;
h3
  font-size: 24 *$px_em;

b, strong
  font-family: "RalewayBold", sans-serif;
  font-weight: normal;
.before
  content ''
  width: 100%
  height 100%
  position absolute
  left:0
  top: 0

.trans
  transition: all .5s ease

.ulmnu
  list-style none
  margin 0
  padding 0
  li
    display inline-block


.main-head, footer
  h1
    text-transform: none;
    line-height 17 * $px_em;
  min-height 620px
  -webkit-background-size: cover
  background-size: cover
  background-position: center;
  position relative
  padding-bottom: 110px
  &::before
    @extend .before
    background-color: #394b5f;
    opacity .85
    
  .top-line
    min-height: 160px
    background-image: url(../img/top_gradient.png)
    background-repeat repeat-x
    padding-top: 45px;

  .logo
    opacity .95
    img
      width 100px

  .main-mnu
    font-family: RalewayRegular,sans-serif
    font-size: 14 * $px_em
    li
      line-height 48px
      padding: 0 10px;
      &.active
        a
          color: $main-color;
          text-decoration: underline
      a:hover
        color: $main-color;
        text-decoration: underline



    ul  
      @extend .ulmnu
    a
      text-decoration: none
      color white

.phone-wrap
  position relative
  .phone
    opacity: .9
    color white
    font-family: RobotoBold, sans-serif
    font-size: 19 * $px_em
    line-height: 48px
    text-align: right
    white-space: nowrap
  .toggle-mnu
    position absolute
    top 0
    right 0
    display: block
    width: 28px
    height: 28px
    padding-top: 20px

  .toggle-mnu span:after,
  .toggle-mnu span:before
    content: ""
    position: absolute
    left: 0
    top: -9px

  .toggle-mnu span:after
    top: 9px

  .toggle-mnu span
    position: relative
    display: block

  .toggle-mnu span,
  .toggle-mnu span:after,
  .toggle-mnu span:before
    width: 100%
    height: 2px
    background-color: white
    border-radius: 2px
    transition: all 0.3s

  .toggle-mnu.on span
    background-color: transparent

  .toggle-mnu.on span:before
    transform: rotate(45deg) translate(5px, 5px)

  .toggle-mnu.on span:after
    transform: rotate(-45deg) translate(7px, -8px)

.header-wrap
  margin-top: 40px
  h1
    margin-top: 120px
    color: white
    border-bottom: $main-color 8px solid;
    display inline-block
  ul
    @extend .ulmnu
    margin-top: 10px
    li
      display block
      font-family: RalewaySemiBold, sans-serif;
      font-style: 18 * $px_em;
      line-height: 32 * $px_em;

      &:before
        display inline-block
        content ''
        transform: rotate(45deg)
        border-bottom: 4px transparent solid
        border-left: 4px transparent solid
        border-top: 4px $main-color solid
        border-right: 4px $main-color solid
        margin-right 15px
      a
        text-decoration: none;
        color white
        &:hover
          text-decoration: underline

.header-left
  margin-bottom: 50px;

.forms
  background-color: rgba(36,51,67,.8);
  padding: 30px 35px
  color: #97a4b2
  font-size: 14 * $px_em
  border-bottom: 3px solid #1F2A36
  .buttons
    margin-top: 15px
  h4
    color white
    font-family: PFCentroSlabProMedium, sans-serif
    font-size: 34px
    margin 0
    text-transform: none
  p
    font-family: RalewayRegular, sans-serif
    line-height: 18 * $px_em
  label
    display block
    margin-top 22px
    margin-bottom 10px
    font-family: RalewayRegular, sans-serif
    span
      letter-spacing : 1.5px
      margin-bottom: 3px
      display: block
      color: #778390
      margin-bottom 10px
    input
      display block
      width 100%
      border: none
      box-shadow 0 -3px #1F2A36
      background-color: #34465A
      text-indent: 10px
      padding 9px 0
      transition .3s all ease
      font-family: PFCentroSlabProMedium, sans-serif
      font-size: 18 * $px_em
      &:focus
        box-shadow 0 -6px #1f2a36
        outline none
        background-color: #394E65

.button-wrap
  text-align center

.buttons
  display inline-block
  border none
  background-color: $main-color
  color #111
  font-family: PFCentroSlabProBold, sans-serif
  font-size: 20* $px_em
  padding 12px 25px
  border-bottom: 3px solid #B97200
  transition .5s all ease
  text-decoration: none
  &:hover,
  &:active,
  &:focus
    background-color: #FFB338
    text-decoration: none
    color black
  &:active,
  &:focus
    background-color: #DB8C0E


.arrow-bottom
  display inline-block
  width: 40px
  height: 40px
  background-image: url(../img/arrow_down.png)
  position relative
  z-index 2
  top 40px
  cursor pointer
  opacity .7
  transition .3s all ease
  &:hover
    opacity 1

