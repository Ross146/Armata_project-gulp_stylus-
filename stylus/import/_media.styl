  .main-head
    .logo
      img
        width 70px
  .s2-item-wrap
    padding: 0 10px
    width: 140px
  .section_5
    .triangles-container
      .tc-item
        margin-left: 0
  .slider
    .owl-controls
      .owl-nav
        div
          top: 8%
