.trans
  transition: all .5s ease

@media only screen and (max-width : 1200px)

  .main-head, footer
    .main-mnu
      display none
      min-width: 290px
      float: right
      text-align: right
      background-color: #1c242c
      margin-top: 10px
      position absolute
      right 15px
      z-index 2
      ul
        li
          display: block
          padding: 0
          a
            font-size: 19px;
            display: block
            padding 0 20px
            @extend .trans
            &:hover
              background-color: #273646;
  footer
    .main-mnu
      position relative
  .phone
    padding-right: 60px

  .section_3
    .section-content
      .img-wrap-folder
        margin-left 83 px

  .section_5
    .triangles-container
      .tc-item
        margin-bottom 3px

@media only screen and (max-width : 992px)
  .section-8
    .section-head
      h2, p
        text-align center
      h2:after
        margin 25px auto

  .header-wrap
    h1
      margin-top: 0
  .info-item
    margin 40px 0

  .section_3
    .section-content
      .img-wrap-folder
        margin-left 45px
        margin-top 95px
      .info-item
        margin-top 0
        &.center
          margin-top: 0
        &.left-item, &.right-item
          margin-top 0
        &.left-top-item, &.left-bottom-item
          margin-left 0px
        &.right-top-item, &.right-bottom-item
          margin-left 0px
        &.right-item
          margin-left 0

  .section_5
    .triangles-container
      .tc-item:nth-child(3)
        margin-left: 0

/* Small Devices, Tablets */
@media only screen and (max-width : 768px)
  .s8-items
    .s8-item
      margin-bottom 35px

  .section_3
    .section-content
      .info-item
        padding-left 0
        max-width: 100%
        border-bottom: #546476 1px solid
        &.center-bottom
          margin-top: 0
      .img-folder
        display: none
  .section-content.section_1
    background-position: center
    .s1-bottom
      padding-bottom: 15px
      margin-top: 0
    .s1-bottom-triangle
      display none
    .homesect
      .section-head
        margin-bottom: 0
    .main-head
      .main-mnu
        top: 35px
    .info-item
      max-width: 100%
      margin-top: 20px
      margin-bottom: 20px
      padding-left 0
      h4
        font-size: 13px
        margin-bottom 0

  .section_3
    .section-content
      padding-top 0
  /*Disable Animation on Mobile Devices*/
  .animated
    /*CSS transitions*/
    -o-transition-property: none !important
    -moz-transition-property: none !important
    -ms-transition-property: none !important
    -webkit-transition-property: none !important
    transition-property: none !important
    /*CSS transforms*/
    -o-transform: none !important
    -moz-transform: none !important
    -ms-transform: none !important
    -webkit-transform: none !important
    transform: none !important
    /*CSS animations*/
    -webkit-animation: none !important
    -moz-animation: none !important
    -o-animation: none !important
    -ms-animation: none !important
    animation: none !important
